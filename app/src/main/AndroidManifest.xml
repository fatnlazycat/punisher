<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.foundation101.thepunisher">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/no_avatar"
        android:label="@string/app_name"
        android:supportsRtl="false"
        android:theme="@style/AppTheme">
        <meta-data android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id"/>
        <meta-data android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <activity android:name=".activity.StartActivity"
            android:theme="@style/AppThemeWithoutDrawer">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="org.foundation101.thepunisher.activity.TutorialActivity"
            android:theme="@style/AppThemeWithoutDrawer" />
        <activity android:name=".activity.TipsActivity"
            android:theme="@style/AppThemeWithoutDrawer" />
        <activity android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            android:label="@string/app_name" />
        <activity android:name="org.foundation101.thepunisher.activity.MainActivity"
            android:label="@string/title_activity_main" />
        <activity android:name="org.foundation101.thepunisher.activity.ViolationActivity"
            android:label="@string/title_activity_bribery"
            android:parentActivityName="org.foundation101.thepunisher.activity.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.foundation101.thepunisher.activity.MainActivity" />
        </activity>
        <activity android:name="org.foundation101.thepunisher.activity.NewsActivity" />
        <activity android:name="org.foundation101.thepunisher.activity.SignUpActivity"
            android:label="@string/title_activity_sign_up"
            android:parentActivityName=".activity.TipsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.TipsActivity" />
        </activity>
        <activity android:name="org.foundation101.thepunisher.activity.ForgotPasswordActivity"
            android:parentActivityName=".activity.TipsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.TipsActivity" />
        </activity>
        <activity android:name="org.foundation101.thepunisher.activity.ForgotPassword2Activity"
            android:label="@string/title_activity_forgot_password2"
            android:parentActivityName="org.foundation101.thepunisher.activity.ForgotPasswordActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.foundation101.thepunisher.activity.ForgotPasswordActivity" />
        </activity>
        <activity android:name="org.foundation101.thepunisher.activity.ShowMediaActivity"
            android:label="@string/title_activity_show_photo"/>
    </application>

</manifest>