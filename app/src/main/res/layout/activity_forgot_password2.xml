<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dnk.punisher.activity.ForgotPassword2Activity">

    <ImageView
        android:id="@+id/imageViewForgotPassword2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/ill_reset_password"/>

    <TextView
        android:id="@+id/textViewForgotPassword2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_forgot_password2"
        android:textSize="16sp"
        android:gravity="center"/>

    <Button
        android:id="@+id/buttonForgotPassword2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/check_email"
        android:onClick="proceedWithPasswordRenovation"
        android:layout_marginTop="20dp" />
</LinearLayout>
