<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_marginBottom="1dp"
    android:background="@android:color/background_light">

    <!--    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewRequisiteHeader"
        style="@style/GreenHeader"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:paddingLeft="10dp"
        android:background="@drawable/vertical_green_line"
        android:textSize="@dimen/textSizeRequisiteDescription"
        android:id="@+id/textViewRequisiteDescription"/>

    <AutoCompleteTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-5dp"
        android:textSize="@dimen/textSizeRequisiteEditText"
        android:textColorHint="@color/green_button_disabled"
        android:id="@+id/editTextRequisite"/>

    <FrameLayout
        android:id="@+id/mapContainer"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:visibility="gone"/>

</LinearLayout>