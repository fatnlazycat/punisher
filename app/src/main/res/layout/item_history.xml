<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:gravity="center"
        android:background="@android:color/white"
        android:id="@+id/linearLayoutStatus">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingTop="2dp"
            android:id="@+id/imageViewStatus"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/textViewRequestStatus"
            android:paddingStart="6dp"
            android:textAllCaps="true"
            android:textSize="12sp"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:id="@+id/textViewRequestTimeStamp"
            android:textSize="12sp"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/linearLayoutStatus"
        android:id="@+id/collapsableLayout"
        android:visibility="gone">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:paddingTop="12dp"
            android:paddingLeft="17dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="@string/operatorComment"
            android:id="@+id/headerOperatorComment"
            style="@style/GreenHeader"
            android:visibility="gone"
            android:background="@color/colorBackground"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:paddingLeft="17dp"
            android:paddingTop="5dp"
            android:paddingBottom="16dp"
            android:layout_below="@id/headerOperatorComment"
            android:background="@color/colorBackground"
            android:id="@+id/operatorComment"
            android:visibility="gone"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="23dp"
            android:paddingTop="24dp"
            android:paddingBottom="5dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/operatorComment"
            android:text="@string/answerToRequest"
            android:id="@+id/headerAnswer"
            style="@style/GreenHeader"
            android:visibility="gone"
            android:background="@android:color/white"/>
        <WebView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_below="@id/headerAnswer"
            android:id="@+id/imageAnswer"
            android:visibility="gone"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="23dp"
            android:paddingTop="31dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/imageAnswer"
            android:text="@string/answerBy"
            android:id="@+id/headerAnswerBy"
            style="@style/GreenHeader"
            android:background="@android:color/white"
            android:visibility="gone"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/headerAnswerBy"
            android:id="@+id/textAnswerBy"
            style="@style/EditTextStyle"
            android:background="@android:color/white"
            android:visibility="gone"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/rateLayout"
            android:layout_below="@id/textAnswerBy"
            android:background="@android:color/white"
            android:visibility="gone">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="23dp"
                android:text="@string/estimateGivenAnswer"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="13dp"
                android:id="@+id/buttonLike"
                android:src="@mipmap/ic_like"
                android:background="@drawable/selector_common_button"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:id="@+id/buttonDislike"
                android:src="@mipmap/ic_dislike"
                android:background="@drawable/selector_common_button"/>
        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/collapsableLayout"
        android:layout_marginTop="2dp"
        android:paddingTop="16dp"
        android:paddingBottom="12dp"
        android:paddingRight="84dp"
        android:gravity="right"
        android:textAllCaps="true"
        android:textSize="12sp"
        android:id="@+id/textViewDetailsAction"
        android:background="@android:color/white"/>

</RelativeLayout>